{{#each ideas}}
  <div class="card card-body mb-2">
    <h4><b>Title:</b> {{title}}</h4>
    <p><b>Video Type:</b> {{videotype}}</p>
    <p><b>Video Details:</b> {{details}}</p>
    <p><b>Author: </b> {{author}}</p>


    <a class="btn btn-dark btn-block mb-2" href="/ideas/edit/{{id}}">Edit</a>
    <form action="/ideas/{{id}}?_method=DELETE" method="post">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" class="btn btn-danger btn-block" value="Delete">
    </form>
  </div>
{{else}}
  <p>No video ideas listed</p>
{{/each}}
